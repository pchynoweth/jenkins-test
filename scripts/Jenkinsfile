pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                parallel (
                    echo 'Testing..'
                    echo 'parallel'
                )
            }
        }
        stage('Approval') {
            steps {
                input message: 'Ready for deployment...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
